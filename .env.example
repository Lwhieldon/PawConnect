# Environment Configuration
ENVIRONMENT=development
LOG_LEVEL=INFO
DEBUG=False

# Google Cloud Platform
GCP_PROJECT_ID=pawconnect-ai
GCP_REGION=us-central1
GCP_CREDENTIALS_PATH=

# Petfinder API
PETFINDER_API_KEY=your_petfinder_api_key
PETFINDER_API_SECRET=your_petfinder_api_secret
PETFINDER_BASE_URL=https://api.petfinder.com/v2

# Dialogflow CX
DIALOGFLOW_AGENT_ID=your_dialogflow_agent_id
DIALOGFLOW_LOCATION=us-central1

# Vertex AI
VERTEX_AI_ENDPOINT=
VERTEX_AI_MODEL_NAME=recommendation-model

# Cloud Vision API
VISION_API_ENABLED=True

# Cloud Pub/Sub
PUBSUB_TOPIC_PREFIX=pawconnect
PUBSUB_SEARCH_TOPIC=pawconnect-search-results
PUBSUB_RECOMMENDATION_TOPIC=pawconnect-recommendations

# Firestore
FIRESTORE_COLLECTION_USERS=users
FIRESTORE_COLLECTION_APPLICATIONS=applications

# Redis/Memorystore
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
CACHE_TTL=3600

# API Settings
API_TIMEOUT=30
API_MAX_RETRIES=3
API_RATE_LIMIT=100

# Search Settings
DEFAULT_SEARCH_RADIUS=50
MAX_SEARCH_RESULTS=100

# Recommendation Settings
RECOMMENDATION_TOP_K=10
RECOMMENDATION_MIN_SCORE=0.5

# Model Settings
MODEL_CONFIDENCE_THRESHOLD=0.7

# Testing
TESTING_MODE=True
MOCK_APIS=True
